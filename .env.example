APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# VibeTravels uses MySQL 8.0+ (required for CHECK constraints and JSON support)
# IMPORTANT: In production with Docker, set DB_HOST=mysql (container name)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vibetravels
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
# IMPORTANT: Use 'redis' in production for better performance
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration
# IMPORTANT: Use 'redis' in production (faster), 'database' for local development only
QUEUE_CONNECTION=database

# Cache Configuration
# IMPORTANT: Use 'redis' in production for performance
# Laravel 11 uses CACHE_STORE (not CACHE_DRIVER)
CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
# IMPORTANT: In production with Docker, set REDIS_HOST=redis (container name)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# VibeTravels Specific Configuration

# OpenAI API Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# Development: Set to false to use mock AI responses (zero cost)
AI_USE_REAL_API=false

# Mailgun Email Configuration
# Get credentials from: https://app.mailgun.com/
# Note: Click tracking and opens tracking are disabled by MailConfigServiceProvider
# to prevent URL rewriting (e.g., verification links remain clean)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.eu.mailgun.net
MAIL_MAILER=mailgun
MAIL_FROM_ADDRESS="noreply@vibetravels.com"
MAIL_FROM_NAME="${APP_NAME}"

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# AI Generation Limits
# Monthly limit per user (default: 10)
AI_GENERATION_LIMIT_MONTHLY=10
