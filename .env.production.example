# VibeTravels - Production Environment Configuration Template
# Copy this to .env on production server and fill in the secrets

# Application
APP_NAME="VibeTravels"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://przem-podroze.pl

APP_LOCALE=pl
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pl_PL

# Database (Docker container names)
DB_CONNECTION=mysql
DB_HOST=mysql  # Docker container name, NOT localhost!
DB_PORT=3306
DB_DATABASE=vibetravels
DB_USERNAME=vibetravels
DB_PASSWORD=  # REQUIRED: Set strong password here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session (use Redis in production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue (use Redis in production)
QUEUE_CONNECTION=redis

# Cache (use Redis in production)
# IMPORTANT: Laravel 11 uses CACHE_STORE, not CACHE_DRIVER
CACHE_STORE=redis
CACHE_PREFIX=

# Redis (Docker container name)
REDIS_CLIENT=phpredis
REDIS_HOST=redis  # Docker container name, NOT localhost!
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (SendGrid or Mailgun)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=  # REQUIRED: SendGrid API key (starts with SG.)
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@przem-podroze.pl"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun (alternative to SendGrid)
# MAILGUN_DOMAIN=przem-podroze.pl
# MAILGUN_SECRET=  # REQUIRED if using Mailgun
# MAILGUN_ENDPOINT=api.eu.mailgun.net

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DAILY_DAYS=14

# Google OAuth
GOOGLE_CLIENT_ID=  # REQUIRED: From Google Cloud Console
GOOGLE_CLIENT_SECRET=  # REQUIRED: From Google Cloud Console
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# OpenAI API
AI_USE_REAL_API=true  # Set to false to use mock responses (testing)
OPENAI_API_KEY=  # REQUIRED if AI_USE_REAL_API=true
OPENAI_MODEL=gpt-4o-mini

# AI Generation Limits
AI_GENERATION_LIMIT_MONTHLY=10

# Security
SANCTUM_STATEFUL_DOMAINS=przem-podroze.pl,www.przem-podroze.pl

# AWS (if needed for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"
